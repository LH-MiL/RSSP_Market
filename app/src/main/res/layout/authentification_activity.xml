<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arr_plan_degrade"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    >
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chariot"
        >
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSSP Market"
        android:textSize="20sp"
        android:gravity="center"></TextView>
    <EditText
        android:id="@+id/email"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/arr_plan_arrondi"
        android:hint="exemple@ensa.ma"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        ></EditText>
    <EditText
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/arr_plan_arrondi"
        android:hint="Mot de passe"
        android:paddingLeft="20dp"
        android:inputType="numberPassword"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seConnecter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/arr_plan_arrondi"
            android:text="Se connecter"></Button>
        <TextView
            android:onClick="creationUtilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CrÃ©er un compte"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:textColor="@color/white"
            ></TextView>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="partager"
            android:src="@drawable/icon_partager"></ImageView>
        <ImageView
            android:onClick="webOpen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_web"></ImageView>
        <ImageView
            android:onClick="maps"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_maps"></ImageView>
        <ImageView
            android:onClick="appel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_appel"></ImageView>
        <ImageView
            android:id="@+id/youtube"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_youtube"></ImageView>

    </LinearLayout>
</LinearLayout>